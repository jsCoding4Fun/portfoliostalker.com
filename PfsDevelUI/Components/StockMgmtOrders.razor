<MudTable T="ViewStockOrders" Items="_orders" >
    <HeaderContent>
        <MudTh>Portfolio</MudTh>
        <MudTh>Type</MudTh>
        <MudTh>Units</MudTh>
        <MudTh>Price</MudTh>
        <MudTh>From</MudTh>
        <MudTh>To</MudTh>
        <MudTh>Edit</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd >@context.PfName</MudTd>
        <MudTd >@context.Order.Type.ToString()</MudTd>
        <MudTd >@context.Order.Units</MudTd>
        <MudTd >@context.Order.PricePerUnit.ToString("0.00")@context.Currency</MudTd>
        <MudTd >@context.Order.FirstDate.ToString("yyyy-MM-dd")</MudTd>
        <MudTd >@context.Order.LastDate.ToString("yyyy-MM-dd")</MudTd>
        <MudTd><MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="@(() => OnEditOrderAsync(@context))" >EDIT</MudButton></MudTd>
    </RowTemplate>
</MudTable>
