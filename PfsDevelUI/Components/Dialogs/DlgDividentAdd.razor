@namespace PfsDevelUI.Components
@using PFS.Types

<MudDialog>
    <TitleContent>

        <MudToggleIconButton Toggled="@_fullscreen" ToggledChanged="OnFullScreenChanged"
                        Icon="@Icons.Material.Filled.Fullscreen" Color="@Color.Error" 
                        ToggledIcon="@Icons.Material.Filled.Fullscreen" ToggledColor="@Color.Success" />

        Divident to [<b>$@Ticker</b>] under: <b>@PfName</b>

    </TitleContent>

    <DialogContent>

        <MudNumericField  @bind-Value="_values.Units" Label="Units" Variant="Variant.Outlined" Min="1" HideSpinButtons="true" />
        <MudNumericField  @bind-Value="_values.PaymentPerUnit" Label="Payment per Unit" Variant="Variant.Outlined" Min="0" HideSpinButtons="true" AdornmentText="@_viewCurrency" Adornment="Adornment.End" />
        <MudTextField  @bind-Value="_values.DividentID" Label="Custom ID" Variant="Variant.Outlined" />
        
        @if (_viewConversionRate == true)
        {
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <MudTextField  @bind-Value="_values.ConversionRate" Label="@_conversionLabel" Variant="Variant.Outlined" />
                </div>
                <div class="col-md-1">
                    <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Error" OnClick="OnBtnGetCurrencyAsync" />
                </div>
            </div>
        </div>
        }

        <MudDatePicker Label="Payment Date" @bind-Date="_dividentDate" MaxDate="@(DateTime.Now)" />

    </DialogContent>

    <DialogActions>

        <MudButton OnClick="DlgCancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="OnBtnAddAsync">Add</MudButton>

    </DialogActions>
</MudDialog>
